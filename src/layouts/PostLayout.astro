    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: color 0.3s;
    padding: 1rem;
  }
  .post-nav {
    margin-top: 1.5rem;
    color: lightcoral;
  }

  .prev-post:hover,
  .next-post:hover {
    color: var(--text-secondary);
  }

  .post-title-sm {
    font-size: 1rem;
    font-weight: bold;
    color: var(--text-primary);
  }

  .icon {
    transition: color 0.5s;
    width: 1rem;
    height: 1rem;
    color: var(--text-primary);
    fill: var(--text-primary);
  }

  .back-to-top-button {
    display: flex;
    align-items: center;
    background-color: var(--button-bg);
    color: var(--button-text);
    border: none;
    border-radius: 0.25rem;
    padding: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
  }

