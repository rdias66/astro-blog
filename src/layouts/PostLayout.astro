  .prose a,
  .prose figcaption,
  .prose strong {
    color: var(--text-primary);
    opacity: 1;
  }

  .prose a {
    text-decoration: underline;
    text-underline-offset: 0.5rem;
    text-decoration: dashed;
    transition: color 0.3s;
  }

  .prose a:hover {
    color: var(--accent-color);
  }

  .prose blockquote {
    border-left: 4px solid rgba(255, 0, 0, 0.5);
