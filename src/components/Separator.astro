---
export interface Props {
  noPadding?: boolean
  ariaHidden?: boolean
}

const { noPadding = false, ariaHidden = true } = Astro.props
---

<div class={`separator-container ${noPadding ? 'no-padding' : ''}`}>
  <hr class="separator-line" aria-hidden={ariaHidden} />
</div>

<style>
  .separator-container {
    max-width: 64rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .separator-container.no-padding {
    padding-left: 0;
    padding-right: 0;
  }

  .separator-line {
    border: none;
    border-top: 2px solid var(--primary-color);
    margin: 0;
  }
</style>
