---
export interface Props {
  noPadding?: boolean
  ariaHidden?: boolean
  thin?: boolean
}

const { noPadding = false, ariaHidden = true, thin } = Astro.props
---

<div class={`separator-container ${noPadding ? 'no-padding' : ''}`}>
  <hr
    class={thin ? 'separator-line-thin' : 'separator-line'}
    aria-hidden={ariaHidden}
  />
</div>

<style>
  .separator-container {
    margin-left: auto;
    margin-right: auto;
  }

  .separator-container.no-padding {
    padding-left: 0;
    padding-right: 0;
  }

  .separator-line {
    border: none;
    border-top: 2px solid var(--primary-color);
    margin: 0;
  }

  .separator-line-thin {
    border: none;
    border-top: 1px solid var(--primary-color);
    margin: 0;
  }
</style>
