---
interface Ref {
  name?: string
  icon: string
  url?: string
  blank?: boolean
  id?: string
}

const { ref } = Astro.props as { ref: Ref }
---

<a
  id={ref.id}
  href={ref.url}
  target={ref.blank ? '_blank' : '_self'}
  rel="noopener noreferrer"
  aria-label={ref.name}
>
  <svg class="icon">
    <use href={`/icons.svg#${ref.icon}`}> </use>
  </svg>

  <style>
    .icon {
      transition: color 0.5s;
      width: 1rem;
      height: 1rem;
      color: var(--text-primary);
      fill: var(--text-primary);
    }

    a:hover {
      cursor: pointer;
    }

    a:hover .icon {
      color: var(--text-secondary);
    }
  </style>
</a>
