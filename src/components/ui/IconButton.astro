---
interface Ref {
  name?: string
  icon: string
  url?: string
  blank?: boolean
  id?: string
}

const { ref } = Astro.props as { ref: Ref }
---

<a
  id={ref.id}
  href={ref.url}
  target={ref.blank ? '_blank' : '_self'}
  rel="noopener noreferrer"
  aria-label={ref.name}
>
  <i class={`${ref.icon} icon`}></i>
</a>

<style>
  .icon {
    transition: color 0.5s;
    color: var(--text-primary);
  }

  a:hover {
    cursor: pointer;
  }

  a:hover .icon {
    color: var(--text-secondary);
  }
</style>
