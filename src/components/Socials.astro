---
import IconButton from './ui/IconButton.astro'

interface Ref {
  name?: string
  icon: string
  url: string
  blank: boolean
}

const socials: Ref[] = [
  {
    name: 'GitHub',
    url: 'https://github.com/rdias66',
    icon: 'fa-brands fa-github',
    blank: true,
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/rodrigo-dias-45009a242',
    icon: 'fa-brands fa-linkedin',
    blank: true,
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/diasrodr/',
    icon: 'fa-brands fa-instagram',
    blank: true,
  },
]
---

<ul class="socials">
  {
    socials.map((social) => (
      <li>
        <IconButton ref={social} />
      </li>
    ))
  }
</ul>

<style>
  .socials {
    display: flex;
    gap: 2rem;
    padding: 1rem;
    margin-top: 4px;
  }

  .socials li {
    list-style-type: none;
  }

  .socials a {
    text-decoration: none;
  }
</style>
