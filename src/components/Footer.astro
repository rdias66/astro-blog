---
interface Ref {
  name?: string
  icon: string
  url?: string
  blank?: boolean
}
import Separator from './Separator.astro'
import Socials from './Socials.astro'
import IconButton from './ui/IconButton.astro'
const codeRef: Ref = {
  name: 'TechStack',
  icon: 'code',
}
---

<div class="footer">
  <Separator />
  <div class="content">
    <Socials />
    <span>
      <code>Rodrigo Dias de Almeida - 2024</code>
    </span>
    <IconButton ref={codeRef} />
  </div>
</div>

<style>
  .footer {
    margin-top: 2.5rem; /* equivalent to Tailwind's mt-10 (40px => 2.5rem) */
    position: static;
    bottom: 0;
    width: 100%;
    height: 5rem; /* equivalent to h-20 (80px => 5rem) */
    background-color: rgba(39, 39, 42, 0.6); /* bg-zinc-800 with opacity-60 */
    color: white;
  }

  .content {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 1.75rem; /* equivalent to Tailwind's mt-7 (28px => 1.75rem) */
  }

  .footer-text {
    font-size: 0.875rem; /* equivalent to Tailwind's text-sm */
    font-weight: 100; /* equivalent to Tailwind's font-thin */
    margin: auto 0;
    color: var(--text-secondary); /* equivalent to Tailwind's text-zinc-400 */
    cursor: default;
  }
</style>
